<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    tools:context="com.kesari.trackingfresh.Login.LoginActivity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="292dp"
                android:layout_centerHorizontal="true"
                android:layout_height="120dp"
                app:srcCompat="@drawable/logo"
                android:layout_marginTop="80dp"

                 />

            <ScrollView
                android:layout_centerInParent="true"
                android:layout_below="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:background="@drawable/edittext_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:background="@drawable/imageview_border"
                            android:layout_width="60dp"
                            android:gravity="center"
                            android:layout_height="50dp">

                            <ImageView
                                android:src="@drawable/ic_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            android:focusable="true"
                            android:hint="@string/LoginText"
                            android:textColorHint="@color/white"
                            android:inputType="number"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/edittext_border"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:background="@drawable/imageview_border"
                            android:layout_width="60dp"
                            android:gravity="center"
                            android:layout_height="50dp">

                            <ImageView
                                android:src="@drawable/ic_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:textSize="@dimen/text_size"
                            android:background="@null"
                            android:drawableRight="@drawable/ic_eye"
                            android:focusable="true"
                            android:hint="@string/PassText"
                            android:textStyle="bold"
                            android:inputType="textPassword"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Forgot Password"
                        android:textSize="@dimen/text_size"
                        android:layout_marginTop="20dp"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/btnLogin"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:id="@+id/btnForget"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            fancy:fb_text="Log In"
                            android:id="@+id/btnLogin"
                            fancy:fb_defaultColor="@color/Button_Color"
                            fancy:fb_focusColor="@color/colorPrimary"
                            fancy:fb_radius="5dp"
                            fancy:fb_textColor="@color/white"
                            fancy:fb_textSize="18sp" />

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/btnSignup"
                            fancy:fb_text="Sign Up"
                            fancy:fb_defaultColor="@color/Button_Color"
                            fancy:fb_focusColor="@color/colorPrimary"
                            fancy:fb_radius="5dp"
                            fancy:fb_textColor="@color/white"
                            fancy:fb_textSize="18sp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Log In"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/loginCard"
                            android:background="@drawable/rounded_btn"
                            android:visibility="gone"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@color/TextColor"
                            android:textAppearance="?android:textAppearanceMedium"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sign Up"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/text_size"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:layout_below="@+id/loginCard"
                            android:background="@drawable/rounded_btn"
                            android:textStyle="bold"
                            android:textColor="@color/TextColor"
                            android:textAppearance="?android:textAppearanceMedium"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/Fbbtn"
                            android:src="@drawable/facebook_icon"
                            android:layout_width="80dp"
                            android:layout_height="50dp" />

                        <com.facebook.login.widget.LoginButton
                            android:visibility="gone"
                            android:id="@+id/login_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="OR"
                            android:layout_gravity="center"
                            android:textSize="26sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/Googlebtn"
                            android:src="@drawable/gmail_icon"
                            android:layout_width="80dp"
                            android:layout_height="50dp" />

                        <com.google.android.gms.common.SignInButton
                            android:id="@+id/sign_in_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>



</RelativeLayout>
