<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_payment_details">

    <TextView
        android:id="@+id/delivery_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Button_Color"
        android:drawablePadding="-190dp"
        android:padding="10dp"
        android:text="Payment Details"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSubmit"
        android:layout_below="@+id/delivery_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="@string/select_payment_mode"
                android:textColor="@color/DarkGray"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />
            <!--   <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:padding="10dp"
                   android:text="Total amount :-"
                   android:textColor="@color/DarkGray"
                   android:textSize="@dimen/text_size18"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:paddingTop="10dp"
                   android:text="₹"
                   android:textColor="@color/MoneyGreen"
                   android:textSize="@dimen/text_size18"
                   android:textStyle="bold" />
   -->
            <!--<TextView
                android:id="@+id/price_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:text=""
                android:textColor="@color/MoneyGreen"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />
-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:visibility="gone">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layoutDirection="rtl"
                android:text="Use Wallet amount for payment"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Available Balance: ₹ 200"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/payment_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/cash_on_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:buttonTint="@color/Gray"
                android:text="Cash On Delivery"
                android:textColor="@color/Gray"
                android:textSize="@dimen/text_size" />

            <RadioButton
                android:id="@+id/online_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/Gray"
                android:text="Credit/Debit Card,Net Banking"

                android:textColor="@color/Gray"
                android:textSize="@dimen/text_size" />


        </RadioGroup>

        <CheckBox
            android:id="@+id/walletCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/Gray"
            android:text="Use cash from wallet"

            android:textColor="@color/Gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/promocodeText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:drawablePadding="10dp"
                android:hint="Coupon Code"
                android:inputType="textCapCharacters"
                android:maxLines="3"
                android:textColor="@color/DarkGray"
                android:textColorHint="@color/DarkGray"
                android:textSize="18sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/promocodeSubmit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.5"
                android:padding="5dp"
                fancy:fb_defaultColor="@color/MoneyGreen"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_radius="5dp"
                fancy:fb_text="APPLY"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_btn"
                android:padding="5dp"
                android:text="Apply"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/TextColor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/cancel"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="gone"
                fancy:fb_borderColor="@color/Gray"
                fancy:fb_defaultColor="#00000000"
                fancy:fb_focusColor="@color/colorHighlight"
                fancy:fb_fontIconResource="&#xf00d;"
                fancy:fb_text=""
                fancy:fb_textColor="@color/black"
                fancy:fb_textSize="8sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"
            android:visibility="gone" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="SUBTotal"
                android:textAllCaps="true"
                android:textColor="@color/DarkGray"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="  ₹"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_total"

                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/promocodeDeductHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Promocode "
                android:textColor="@color/DarkGray"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/promo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Coupons"
                android:textAllCaps="true"
                android:textColor="@color/DarkGray"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="- ₹"
                android:textColor="@color/MoneyGreen"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/promocodeDeduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/MoneyGreen"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="5dp"
                android:text="@string/total_payable_amount"
                android:textAllCaps="true"
                android:textColor="@color/Gray"
                android:textSize="@dimen/text_size18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="₹"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price_payable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        fancy:fb_defaultColor="@color/MoneyGreen"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="0dp"
        fancy:fb_text="PLACE ORDER"
        fancy:fb_textColor="@color/white"
        fancy:fb_textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Place Order"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/TextColor"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>