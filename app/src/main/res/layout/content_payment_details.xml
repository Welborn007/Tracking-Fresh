<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/whitegray"
    tools:showIn="@layout/activity_payment_details"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/delivery_text"
        android:text="Payment Details"
        android:textColor="@color/white"
        android:drawablePadding="-190dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:background="@color/Button_Color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/btnSubmit"
        android:layout_below="@+id/delivery_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total amount :-"
                android:textColor="@color/DarkGray"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="₹"
                android:textColor="@color/MoneyGreen"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_total"
                android:text=""
                android:textColor="@color/MoneyGreen"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/text_size18"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_marginLeft="10dp"
                android:layoutDirection="rtl"
                android:textSize="@dimen/text_size"
                android:text="Use Wallet amount for payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Available Balance: ₹ 200"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/payment_group"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/cash_on_delivery"
                android:text="Cash On Delivery"
                android:textSize="@dimen/text_size"

                android:buttonTint="@color/Gray"
                android:textColor="@color/Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/online_payment"
                android:textSize="@dimen/text_size"
                android:text="Credit/Debit Card,Net Banking"
                android:textColor="@color/Gray"
                android:buttonTint="@color/Gray"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>

        <CheckBox
            android:id="@+id/walletCash"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Gray"
            android:text="Use cash from wallet"
            android:layout_width="match_parent"
            android:buttonTint="@color/Gray"

            android:layout_height="wrap_content" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/promocodeText"
                android:hint="Coupon Code"
                android:textSize="18sp"
                android:drawablePadding="10dp"
                android:inputType="textCapCharacters"
                android:textColor="@color/DarkGray"
                android:textColorHint="@color/DarkGray"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:maxLines="3"
                android:layout_weight="3"
                android:layout_height="50dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="50dp"
                android:padding="5dp"
                fancy:fb_text="APPLY"
                android:id="@+id/promocodeSubmit"
                fancy:fb_defaultColor="@color/MoneyGreen"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_radius="5dp"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Apply"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size"
                android:background="@drawable/rounded_btn"
                android:textStyle="bold"
                android:textColor="@color/TextColor"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/cancel"
                fancy:fb_fontIconResource="&#xf00d;"
                fancy:fb_textColor="@color/black"
                fancy:fb_borderColor="@color/Gray"
                fancy:fb_defaultColor="#00000000"
                android:visibility="gone"
                fancy:fb_focusColor="@color/colorHighlight"
                fancy:fb_textSize="8sp"
                fancy:fb_text=""
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/promocodeDeductHolder"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Promocode "
                android:textColor="@color/DarkGray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/promo_type"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Applied :-"
                android:textColor="@color/DarkGray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="- ₹"
                android:textColor="@color/MoneyGreen"
                android:layout_marginLeft="5dp"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/promocodeDeduction"
                android:text=""
                android:textColor="@color/MoneyGreen"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="@dimen/text_size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/total_payable_amount"
                android:textColor="@color/Gray"
                android:layout_margin="0dp"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <TextView
                android:text="₹"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:textColor="@color/black"
                android:id="@+id/price_payable"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        fancy:fb_text="PLACE ORDER"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnSubmit"
        fancy:fb_defaultColor="@color/MoneyGreen"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="0dp"
        fancy:fb_textColor="@color/white"
        fancy:fb_textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:visibility="gone"
        android:textSize="@dimen/text_size"
        android:background="@drawable/rounded_btn"
        android:textStyle="bold"
        android:textColor="@color/TextColor"
        android:textAppearance="?android:textAppearanceMedium"
        />

</RelativeLayout>