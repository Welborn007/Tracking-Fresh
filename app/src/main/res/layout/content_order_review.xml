<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    tools:showIn="@layout/activity_order_review"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeContainer"
        android:layout_above="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/delivery_text"
                    android:text="Order Review"
                    android:textColor="@color/white"
                    android:drawablePadding="-190dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:background="@color/Button_Color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Order no: "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/orderNo"
                            android:text="nil"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Order Placed On: "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/orderDate"
                            android:text="nil"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliveryDateHolder"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Order Delivered On: "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/orderDeliverDate"
                            android:text="nil"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/Gray"/>

                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Delivery Charges"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/deliveryCharge"
                            android:text="nil"
                            android:textColor="@color/black"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Grand Total"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/total_price"
                            android:text="nil"
                            android:textColor="@color/black"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView"
                    android:scrollbars="vertical"
                    android:background="@color/white">
                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Payment Status"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/payment_status"
                        android:text="nil"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Payment Mode"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/payment_mode"
                        android:text="nil"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <TextView
                    android:text="Your Delivery Address"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/edittext_border"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/fullName"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/buildingName"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/landmark"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/address"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mobileNo"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BikerHolder"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Biker Details"
                        android:textColor="@color/white"
                        android:drawablePadding="-190dp"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size"
                        android:background="@color/Button_Color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:padding="5dp"
                        android:id="@+id/bikerNameHolder"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biker "
                            android:layout_gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/bikerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/delivery_textData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" will deliver the order."
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/text_size"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Call"
                            android:layout_weight="1"
                            android:id="@+id/btnCall"
                            fancy:fb_defaultColor="@color/Button_Color"
                            fancy:fb_focusColor="@color/colorPrimary"
                            fancy:fb_radius="5dp"
                            fancy:fb_textColor="@color/white"
                            fancy:fb_textSize="18sp" />

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Support"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/btnSupport"
                            fancy:fb_defaultColor="@color/Button_Color"
                            fancy:fb_focusColor="@color/colorPrimary"
                            fancy:fb_radius="5dp"
                            fancy:fb_textColor="@color/white"
                            fancy:fb_textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/FeedbackHolder"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Order Feedback"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size"
                        android:background="@color/Button_Color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:isIndicator="false"
                        android:layout_gravity="center"
                        android:progressTint="@android:color/holo_red_dark"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:numStars="5"
                        android:id="@+id/ratingBar"
                       />

                    <TextView
                        android:id="@+id/feedbackTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/feedback_remark"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:hint="Feedback" />

                    </android.support.design.widget.TextInputLayout>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        fancy:fb_text="Submit"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/btnFeedback"
                        fancy:fb_defaultColor="@color/Button_Color"
                        fancy:fb_focusColor="@color/colorPrimary"
                        fancy:fb_radius="5dp"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Check Vehicle on Map"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnSubmit"
        fancy:fb_defaultColor="@color/Button_Color"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="5dp"
        fancy:fb_textColor="@color/white"
        fancy:fb_textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/text_size"
        android:background="@drawable/rounded_btn"
        android:textStyle="bold"
        android:textColor="@color/TextColor"
        android:textAppearance="?android:textAppearanceMedium"
        />

</RelativeLayout>