<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_details"
    tools:context="com.kesari.trackingfresh.DetailPage.DetailsActivity"
    >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/addtoCartHolder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/price"
                    android:text="Price Rs. 25"
                    android:layout_gravity="center"
                    android:textColor="@color/Button_Color"
                    android:textSize="@dimen/text_size18"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mrp"
                    android:text=""
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/percent"
                    android:text="-(50)%"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/Button_Color"
                    android:textSize="@dimen/text_size18"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    fancy:fb_text="Add to Cart"
                    android:id="@+id/addtoCart"
                    fancy:fb_defaultColor="@color/Button_Color"
                    fancy:fb_focusColor="@color/colorPrimary"
                    fancy:fb_radius="5dp"
                    fancy:fb_textColor="@color/white"
                    fancy:fb_textSize="18sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Add to Cart"
                    android:textSize="@dimen/text_size"
                    android:visibility="gone"
                    android:background="@drawable/rounded_btn"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/Share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_iconPosition="right"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    fancy:fb_text=""
                    fancy:fb_fontIconResource="&#xf1e0;"
                    fancy:fb_defaultColor="@color/full_trans"
                    fancy:fb_focusColor="#2e5071"
                    fancy:fb_radius="5dp"
                    fancy:fb_textColor="@color/Gray"
                    fancy:fb_textSize="18sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/linear_red_border_layout"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:visibility="gone"
                    android:id="@+id/holder_count"
                    android:weightSum="3"
                    android:layout_height="30dp">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/plus"
                        fancy:fb_fontIconResource="&#xf067;"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_borderColor="@color/Gray"
                        fancy:fb_defaultColor="#00000000"
                        fancy:fb_focusColor="@color/colorHighlight"
                        fancy:fb_textSize="8sp"
                        fancy:fb_text=""
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/count"
                        android:text="0"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:layout_height="match_parent" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/minus"
                        fancy:fb_fontIconResource="&#xf068;"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_borderColor="@color/Gray"
                        fancy:fb_defaultColor="#00000000"
                        fancy:fb_focusColor="@color/colorHighlight"
                        fancy:fb_textSize="8sp"
                        fancy:fb_text=""
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/delete"
                    fancy:fb_fontIconResource="&#xf014;"
                    fancy:fb_textColor="@color/Gray"
                    fancy:fb_borderColor="@color/Gray"
                    fancy:fb_defaultColor="#00000000"
                    fancy:fb_focusColor="@color/colorHighlight"
                    fancy:fb_textSize="10sp"
                    fancy:fb_text=""
                    android:visibility="gone"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Product Description"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/Gray" />

                <TextView
                    android:text="Package Contents"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/package_contents"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/Gray" />

                <TextView
                    android:text="Product Category"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/product_category"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Related Searches"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/related_searches"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/Gray" />

                <TextView
                    android:text="Disclaimer"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/disclaimer"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="@string/disclaimer_text"
                    android:textColor="@color/Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_below="@+id/addtoCartHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                fancy:fb_text="Go to Cart"
                android:layout_weight="1"
                fancy:fb_iconPosition="left"
                android:id="@+id/gotoCart"
                fancy:fb_fontIconResource="&#xf217;"
                fancy:fb_defaultColor="@color/Button_Color"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_radius="5dp"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="18sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                fancy:fb_text="CheckOut"
                android:id="@+id/checkOut"
                fancy:fb_iconPosition="right"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                fancy:fb_fontIconResource="&#xf046;]"
                fancy:fb_defaultColor="@color/Button_Color"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_radius="5dp"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="18sp" />



        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
