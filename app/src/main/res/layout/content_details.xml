<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_details"
    tools:context="com.kesari.trackingfresh.DetailPage.DetailsActivity"
   >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/addtoCartHolder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price"
                        android:text="Price Rs. 25"
                        android:layout_gravity="center"
                        android:textColor="@color/Button_Color"
                        android:textSize="@dimen/text_size18"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/discount"
                        android:text="Price Rs. 50"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/percent"
                        android:text="-(50)%"
                        android:layout_gravity="center"
                        android:textColor="@color/Button_Color"
                        android:textSize="@dimen/text_size18"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/linear_layout_border"
                        android:layout_marginRight="10dp"
                        android:layout_width="100dp"
                        android:weightSum="3"
                        android:layout_height="30dp">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/plus"
                            fancy:fb_fontIconResource="&#xf067;"
                            fancy:fb_textColor="@color/white"
                            fancy:fb_borderColor="@color/Gray"
                            fancy:fb_defaultColor="#00000000"
                            fancy:fb_focusColor="@color/colorHighlight"
                            fancy:fb_textSize="8sp"
                            fancy:fb_text=""
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/count"
                            android:text="0"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size"
                            android:layout_height="match_parent" />

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/minus"
                            fancy:fb_fontIconResource="&#xf068;"
                            fancy:fb_textColor="@color/white"
                            fancy:fb_borderColor="@color/Gray"
                            fancy:fb_defaultColor="#00000000"
                            fancy:fb_focusColor="@color/colorHighlight"
                            fancy:fb_textSize="8sp"
                            fancy:fb_text=""
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/delete"
                        fancy:fb_fontIconResource="&#xf014;"
                        fancy:fb_textColor="@color/Gray"
                        fancy:fb_borderColor="@color/Gray"
                        fancy:fb_defaultColor="#00000000"
                        fancy:fb_focusColor="@color/colorHighlight"
                        fancy:fb_textSize="10sp"
                        fancy:fb_text=""
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <View
                    android:background="#ccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Product Description"
                        android:textSize="@dimen/text_size18"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/product_description"
                        android:text="@string/tomatoDesc"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Package Contents"
                        android:textSize="@dimen/text_size18"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/package_contents"
                        android:text="Tomato, 1kg"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Product Category"
                        android:textSize="@dimen/text_size18"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/product_category"
                        android:text="Meat"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Related Searches"
                        android:textSize="@dimen/text_size18"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/related_searches"
                        android:text="@string/related_Searches"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Disclaimer"
                        android:textSize="@dimen/text_size18"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/disclaimer"
                        android:text="@string/disclaimer_text"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:weightSum="2"
                android:padding="5dp"
                android:layout_below="@+id/addtoCartHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add to Cart"
                    android:id="@+id/addtoCart"
                    android:layout_weight="1"
                    android:drawablePadding="-40dp"
                    android:drawableLeft="@drawable/ic_addtocart"
                    android:textSize="@dimen/text_size"
                    android:background="@drawable/rounded_btn"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="CheckOut"
                    android:id="@+id/checkOut"
                    android:layout_weight="1"
                    android:drawablePadding="-40dp"
                    android:drawableRight="@drawable/ic_checkout_arrow"
                    android:textSize="@dimen/text_size"
                    android:background="@drawable/rounded_btn"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

        </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
