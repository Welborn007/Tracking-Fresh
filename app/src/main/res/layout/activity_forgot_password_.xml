<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_overlay"
    android:orientation="vertical"
    tools:context="com.kesari.trackingfresh.ForgetPassword.ForgotPassword_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/porcelain"
        android:theme="@style/ToolbarStyle"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>
    <!--<include
        android:id="@+id/toolbar1"
        layout="@layout/custom_toolbar" />-->

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:textAlignment="center"
        android:text="@string/forgot_password"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/MoneyGreen"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textheder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logintext"
        android:textAlignment="center"
        android:text="We send you a password in email / mobile"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="292dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">
                <!--
                                <android.support.design.widget.TextInputLayout
                                    android:textColorHint="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Mobile_no"
                    android:textColor="@color/MoneyGreen"
                    android:textSize="14dp" />

                <!--
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/user_nameTextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/usernameTextView">
                -->


                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextback"
                    android:hint="Enter Mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@drawable/mycusor"
                    android:textSize="@dimen/text_size" />

                <!--
                                </android.support.design.widget.TextInputLayout>
                -->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="OR"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--    <android.support.design.widget.TextInputLayout
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
    -->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_id"
                    android:textColor="@color/MoneyGreen"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextback"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@drawable/mycusor"
                    android:textSize="@dimen/text_size" />

                <!--
                                </android.support.design.widget.TextInputLayout>
                -->


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEND"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btnSubmit"
                    android:layout_below="@+id/btnForget"
                    android:background="@drawable/greenround"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/TextColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

       <!--         <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    fancy:fb_defaultColor="@color/fresh_blue"
                    fancy:fb_focusColor="@color/colorPrimary"
                    fancy:fb_radius="5dp"
                    fancy:fb_text="Submit"
                    fancy:fb_textColor="@color/white"
                    fancy:fb_textSize="18sp" />-->

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_btn"
                    android:text="Submit"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/TextColor"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
