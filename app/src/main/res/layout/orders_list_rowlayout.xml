<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/subItemCard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--

                <ImageView
                    android:id="@+id/order_status"
                    android:src="@drawable/rejected"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
        -->

        <LinearLayout
            android:id="@+id/data_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welborn Machado"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:visibility="visible"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/orderNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="Total"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Order placed on:"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/orderDate"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="6767"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/MoneyGreen"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Order Status"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/order_statustext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@color/MoneyGreen"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Order Status"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size14" />

                    <ImageView
                        android:id="@+id/order_status"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_weight="3"
                        android:src="@drawable/rejected"
                        android:visibility="gone" />

                    <!--

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Total Price:"
                                            android:textColor="@color/DarkGray"
                                            android:textSize="@dimen/text_size14"
                                            />

                                        <TextView
                                            android:id="@+id/total_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:layout_marginLeft="10dp"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/text_size14"
                                             />
                    -->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_confirmHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Payment Confirmation:"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/payment_confirm"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="Received"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_modeHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Payment Mode:"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/payment_mode"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="Credit Card"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancelHolder"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Cancellation Reason:"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/cancelReason"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rejectHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:visibility="gone">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Rejection Reason:"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/rejectReason"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/OrderTypeHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:visibility="gone">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Order type:"
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size14" />

                    <TextView
                        android:id="@+id/orderType"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size14" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Order No."
                    android:textColor="@color/DarkGray"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circulargreen_btn"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_holder"
            android:orientation="horizontal">

            <Button
                android:id="@+id/repeat"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/MoneyGreen"
                android:text="Repeat Order"
                android:textColor="@color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/Button_Color"
                android:text="Cancel"
                android:textColor="@color/white" />
