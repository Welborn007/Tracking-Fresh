<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subItemCard_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/images"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/product_name"
                            android:text="Product Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/weight"
                            android:text="Weight"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/Gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/price"
                            android:text="100"
                            android:textColor="@color/Gray"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Rs / Quantity"
                            android:textColor="@color/Gray"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/quantity_price"
                            android:text="100"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Rs /- SubTotal"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/Gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <Button
                        android:id="@+id/plus"
                        android:background="@drawable/cart_circular_drawable"
                        android:text="+"
                        android:textColor="@color/Gray"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:visibility="gone"
                        fancy:fb_fontIconResource="&#xf067;"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_borderColor="@color/Gray"
                        fancy:fb_defaultColor="#00000000"
                        fancy:fb_focusColor="@color/colorHighlight"
                        fancy:fb_textSize="8sp"
                        fancy:fb_text=""
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/count"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/minus"
                        android:background="@drawable/cart_circular_drawable"
                        android:text="-"
                        android:textColor="@color/Gray"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:visibility="gone"
                        fancy:fb_fontIconResource="&#xf068;"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_borderColor="@color/Gray"
                        fancy:fb_defaultColor="#00000000"
                        fancy:fb_focusColor="@color/colorHighlight"
                        fancy:fb_textSize="8sp"
                        fancy:fb_text=""
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Add to Cart"
                    android:id="@+id/addtoCart"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size"
                    android:background="@drawable/rounded_btn"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </LinearLayout>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/delete"
                fancy:fb_fontIconResource="&#xf014;"
                fancy:fb_textColor="@color/Gray"
                fancy:fb_borderColor="@color/Gray"
                fancy:fb_defaultColor="#00000000"
                fancy:fb_focusColor="@color/colorHighlight"
                fancy:fb_textSize="10sp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                fancy:fb_text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
