<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_holder">

        <RelativeLayout
            android:id="@+id/map_Holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                android:id="@+id/places_autocomplete"
                style="@style/Widget.PlacesAutoCompleteTextView.Styled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="Search...."
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:visibility="gone"
                app:pacv_googleMapsApiKey="@string/googleMaps_ServerKey" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/sourceCardview"
                android:background="@color/LightGray"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fancy:fb_borderColor="#FFFFFF"
                            fancy:fb_borderWidth="1dp"
                            fancy:fb_iconPosition="right"
                            android:layout_gravity="center"
                            fancy:fb_fontIconResource="&#xf111;"
                            fancy:fb_defaultColor="@android:color/transparent"
                            fancy:fb_focusColor="#2e5071"
                            fancy:fb_radius="5dp"
                            fancy:fb_text=""
                            fancy:fb_textColor="@color/MoneyGreen"
                            fancy:fb_textSize="10sp" />

                        <TextView
                            android:id="@+id/GuestAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_border"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/sourceCardview"
                android:id="@+id/destinationCardview"
                android:background="@color/LightGray"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fancy:fb_borderColor="#FFFFFF"
                            fancy:fb_borderWidth="1dp"
                            android:layout_gravity="center"
                            fancy:fb_iconPosition="right"
                            fancy:fb_fontIconResource="&#xf111;"
                            fancy:fb_defaultColor="@android:color/transparent"
                            fancy:fb_focusColor="#2e5071"
                            fancy:fb_radius="5dp"
                            fancy:fb_text=""
                            fancy:fb_textColor="@color/orange"
                            fancy:fb_textSize="10sp" />

                        <TextView
                            android:id="@+id/kilometre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_container"
                android:layout_below="@+id/destinationCardview"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:uiZoomControls="true" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/subItemCard_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:background="@color/LightGray"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/ETA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/radius_white"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/radius_mint"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/product_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                fancy:fb_iconPosition="right"
                android:layout_centerInParent="true"
                fancy:fb_iconPaddingLeft="10dp"
                fancy:fb_defaultColor="@color/mint"
                fancy:fb_focusColor="#2e5071"
                fancy:fb_text="Product Category"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="18sp" />

            <RelativeLayout
                android:id="@+id/arrowHolder"
                android:layout_toRightOf="@+id/product_category"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/arrow_down"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_down2"
                    />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/arrow_up"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:background="@drawable/arrow_up2"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/product_holder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_category_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guestnameTxt"
                android:layout_above="@+id/documentsBtn"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

